<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/logoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/leapslogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoView">

        <Button
            android:id="@+id/button_senior"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/primaryDarkGreen"
            android:drawableTop="@drawable/seniorcitizens"
            android:fontWeight="800"
            android:text="SENIOR\nCITIZEN"
            android:textColor="@color/white"
            android:textSize="28sp" />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="1dp"></android.support.v4.widget.Space>
        <Button
            android:id="@+id/button_pwd"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/primaryBlue"
            android:drawableTop="@drawable/pwds"
            android:fontWeight="800"
            android:text="PWD"

            android:textColor="@color/white"
            android:textSize="28sp" />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="1dp"></android.support.v4.widget.Space>
        <Button
            android:id="@+id/button_pregnant"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/primaryGreen"
            android:drawableTop="@drawable/pregnants"
            android:fontWeight="800"
            android:text="PREGNANT"

            android:textColor="@color/white"
            android:textSize="28sp" />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="1dp"></android.support.v4.widget.Space>
        <Button
            android:id="@+id/button_regular"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/primaryGrey"
            android:drawableTop="@drawable/regulars"
            android:fontWeight="800"
            android:text="Regular"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>